// Firestore Security Rules for HaloFit
// Copy these rules to Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // Allow read/write only to the authenticated user
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // Workouts subcollection
      match /workouts/{workoutId} {
        // Allow read/write only to the user who owns the parent document
        allow read, write: if isAuthenticated() && isOwner(userId);
        
        // Data points subcollection (nested under workouts)
        match /dataPoints/{dataPointId} {
          // Allow read/write only to the user who owns the workout
          allow read, write: if isAuthenticated() && isOwner(userId);
        }
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
