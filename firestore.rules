// Firestore Security Rules for HaloFit
// Copy these rules to Firebase Console > Firestore Database > Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection - users can read all data but only write their own
    match /users/{userId} {
      // Allow read to any authenticated user (for global stats)
      // Allow write only to the document owner
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
      
      // Workouts subcollection
      match /workouts/{workoutId} {
        // Allow read to any authenticated user (for global stats)
        // Allow write only to the user who owns the parent document
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && isOwner(userId);
        
        // Data points subcollection (nested under workouts)
        match /dataPoints/{dataPointId} {
          // Allow read to any authenticated user (for global stats)
          // Allow write only to the user who owns the workout
          allow read: if isAuthenticated();
          allow write: if isAuthenticated() && isOwner(userId);
        }
      }
    }
    
    // Allow collectionGroup queries for workouts (for global stats)
    match /{path=**}/workouts/{workoutId} {
      allow read: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
